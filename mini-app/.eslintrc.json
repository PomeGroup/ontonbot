{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "plugin:drizzle/recommended"
  ],
  "plugins": [
    "unused-imports",
    "sql-template",
    "drizzle"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": 1,
    "unused-imports/no-unused-imports": "warn",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "sql-template/no-unsafe-query": ["warn",
      {
        "dialect": "postgres",
        "templateTag": "sql",
        "ignoreExpressions": true   // ‚Üê key option
      }
    ]
  }
}
