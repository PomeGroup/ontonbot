{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@tma/*": [
        "./../../packages/tma/tma/*"
      ],
      "@ui/*": [
        "./../../packages/ui/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "env.mjs",
    "postcss.config.cjs",
  ],
  "exclude": [
    "node_modules"
  ]
}
